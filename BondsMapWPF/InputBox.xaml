<Window x:Class="BondsMapWPF.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Имя группы" Height="93" Width="150" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <TextBox Name="NameTextBox" Margin="5" DockPanel.Dock="Top" />
        <WrapPanel HorizontalAlignment="Center" >
            <Button Name="OkButton" Width="50" Content="OK" Margin="2,0,2,2" IsDefault="True" Click="OkButton_Click" />
            <Button Name="CancelButton" Width="50" Content="Отмена" Margin="2,0,2,2" IsCancel="True" Click="CancelButton_Click" />
        </WrapPanel>
    </DockPanel>
</Window>
